      "cell_type": "code",
      "source": [
        "import numpy as np\n",
        "\n",
        "def coin_flip(n):\n",
        "    \"\"\"Generator function that simulates n coin flips.\"\"\"\n",
        "    for _ in range(n):\n",
        "        yield np.random.randint(0, 2)\n",
        "\n",
        "# Example usage: get results of 10 coin flips as a list\n",
        "n_flips = 10\n",
        "results = [flip for flip in coin_flip(n_flips)]\n",
        "\n",
        "print(results)\n"
      ],
